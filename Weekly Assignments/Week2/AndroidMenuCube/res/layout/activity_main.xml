<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenGLES20Basic" >

    <FrameLayout
        android:id="@+id/GameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <com.example.androidmenucube.MyGLSurfaceView
            android:id="@+id/surfaceviewclass"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/rotateup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/U" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/gamecontrolslayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/GameFrame"
        android:layout_alignParentRight="true" >

        <Button
            android:id="@+id/rotateright"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/R" />

        <Button
            android:id="@+id/rotateleft"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/L" />

        <SeekBar
            android:id="@+id/brightnessBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/rotatedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/D" />

</RelativeLayout>